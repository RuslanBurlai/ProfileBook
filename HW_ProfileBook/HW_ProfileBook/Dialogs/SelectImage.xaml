<?xml version="1.0" encoding="utf-8" ?>
<Frame
    x:Class="HW_ProfileBook.Dialogs.SelectImage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    prism:DialogLayout.CloseOnBackgroundTapped="True"
    prism:DialogLayout.RelativeHeightRequest="0.5"
    prism:DialogLayout.RelativeWidthRequest="0.75"
    prism:ViewModelLocator.AutowireViewModel="True"
    CornerRadius="20"
    HasShadow="false">

    <StackLayout
        HorizontalOptions="Center"
        Orientation="Vertical"
        VerticalOptions="Center">

        <Label Text="Pick at gallery " />
        <Label Text="Take phota with camera" />
        <Button
            BackgroundColor="Yellow"
            Command="{Binding CloseCommand}"
            HorizontalOptions="FillAndExpand"
            Text="Close"
            TextColor="White" />

    </StackLayout>

</Frame>